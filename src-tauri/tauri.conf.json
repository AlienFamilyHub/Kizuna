{
	"$schema": "https://schema.tauri.app/config/2",
	"productName": "kizuna",
	"version": "0.0.3",
	"identifier": "top.yumehoxi.kizuna",
	"build": {
		"beforeDevCommand": "pnpm run dev",
		"beforeBuildCommand": "pnpm run build",
		"devUrl": "http://localhost:5173",
		"frontendDist": "../dist",
		"removeUnusedCommands": true
	},
	"app": {
		"windows": [
			{
				"title": "Kizuna",
				"width": 486,
				"height": 842
			}
		],
		"security": {
			"csp": null
		}
	},
	"bundle": {
		"active": true,
		"targets": "all",
		"icon": [
			"icons/32x32.png",
			"icons/128x128.png",
			"icons/128x128@2x.png",
			"icons/icon.icns",
			"icons/icon.ico"
		]
	}
}
